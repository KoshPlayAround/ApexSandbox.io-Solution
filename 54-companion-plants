public Boolean companionPlants(String plant1, String plant2) {

   Map<String ,List<String>> Companions =new Map<String,List<String>>();
   Companions.put(lettuce,{cucumbers,onions});
   Companions.put(onions,{lettuce,tomatoes,carrots});
   Companions.put(tomatoes,{onions});
   Companions.put(cucumbers,{lettuce});
   Companions.put(carrots,{onions});

   return(Companions.get(plant1).contains(plant2)?true:false);



}